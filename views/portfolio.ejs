<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex align-items-center">

      <div class="logo mr-auto">
        <h1 class="text-light"><a href="/">Tailorzx</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html"><img src="/download/img/logo.png" alt="" class="img-fluid"></a>-->
      </div>

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li class="active"><a href="/">Home</a></li>
          <% if(currentUser){ %>
            <% if(currentUser.type === "Consumer"){ %>
            <li><a href="/">Signed in as <%= currentUser.username %></a></li>
            <% } else if(currentUser.type === "Tailor") { %>
            <li><a href="/dashboard">Signed in as <%= currentUser.username %></a></li>
            <% } %>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
            <li class="active"><a href="/login">Login</a></li>
          <% } %>
        </ul>
      </nav><!-- .nav-menu -->

    </div>
  </header><!-- End Header -->

  <% var found = false %>
  <main id="main">
    <div class="container">
      <% if(success && success.length>0){ %>
          <div id="flash" class="alert alert-success" role="alert">
              <%= success %>
          </div>
      <% } %>
      <% if(error && error.length>0){ %>
          <div id="flash" class="alert alert-danger" role="alert">
              <div><%= error %></div>
          </div>
      <% } %>
    </div>
    <% for(var i = 0; i< portf.length; i++){ %>
        <% if(portf[i].user == currentUser.username){ %>
            <% found = true; %>
            <% var location = portf[i].location %>
            <% var desc = portf[i].desc %>
            <% var pic1 = portf[i].pic1 %>
            <% var pic2 = portf[i].pic2 %>
            <% var pic3 = portf[i].pic3 %>
        <% } %>
    <% } %>

    <% if(found){ %>
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>
          
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <img src="<%= pic1 %>" alt="Los Angeles" style="width:100%; height: 400px;">
                </div>
          
                <div class="item">
                  <img src="<%= pic2 %>" alt="Chicago" style="width:100%; height: 400px;">
                </div>
              
                <div class="item">
                  <img src="<%= pic3 %>" alt="New york" style="width:100%; height: 400px;">
                </div>
              </div>
          
              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
    
          <div class="center container div-port">
            <br><br>
            <h1 class="display-5 font"><< Username >></h1>
            <hr>
            <h1 class="display-1 font"><%= currentUser.username %></h1>
            <hr>
            <h1 class="display-5 font"><< Description >></h1>
            <hr>
            <h1 class="display-5 font1">
                <%= desc %>
            </h1>
            <hr>
            <hr>
            <h1 class="display-5 font"><< Location >></h1>
            <hr>
            <h1 class="display-5 font1">
                <%= location %>
            </h1>
            <hr>
            <br>
            <br>    
          </div>
          <br>
          <br>
        </div>
    <% } else { %>
        <div class="container form-port">
            <h1 class="display-1 font">Create a portfolio for your brand!</h1>
            <br>
            <h1 class="display-5 font1">Fill the following details.</h1>

            <form method="POST" action="/dashboard">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Location</label>
                    <input type="text" name="location" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g. New Delhi" required>
                </div>
                <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                <textarea class="form-control form-port" name="desc" id="exampleFormControlTextarea1" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Pic 1 (link)</label>
                    <input type="text" name="pic1" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g. www.abc.com/image.jpg" required>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Pic 2 (link)</label>
                    <input type="text" name="pic2" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g. www.abc.com/image.jpg" required>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Pic 3 (link)</label>
                    <input type="text" name="pic3" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g. www.abc.com/image.jpg" required>
                </div>
                <div class="form-group">
                    <input class="btn-primary" type="submit" value="Submit">  
                </div>
            </form>
        </div>
    <% } %>

  <div class="center container div-port">
      <h1 class="display-1 font">Orders Recieved!</h1>
      <div class="table-responsive">
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Consumer</th>
          <th>Phone</th>
          <th>Range</th>
          <th>More</th>
        </tr>
        <% for(var i = 0; i < order.length; i++){ %>
          <% if(order[i].tailor == currentUser.username) { %>
            <tr>
              <td><%= order[i].title %></td>
              <td><%= order[i].username %></td>
              <td><%= order[i].Phone %></td>
              <td><%= order[i].range %></td>
              <td><a href="/ordershow/<%= order[i]._id %>">Know more</a></td>
            </tr>
          <% } %>
        <% } %>
      </table>
      </div>
      <br>

      <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
      </style>
  </div>

  <div class="center container div-port">
    <h1 class="display-1 font">Contacts Recieved!</h1>
    <table>
      <tr>
        <th>Consumer</th>
        <th>Message</th>
        <th>Email</th>
      </tr>
      <% for(var i = 0; i < contact.length; i++){ %>
        <% if(contact[i].tailor == currentUser.username) { %>
          <tr>
            <td><%= contact[i].user %></td>
            <td><%= contact[i].message %></td>
            <td><%= contact[i].email %></td>
          </tr>
        <% } %>
      <% } %>
    </table>
    <br>
  </div>
  </main><!-- End #main -->

