<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex align-items-center">

      <div class="logo mr-auto">
        <h1 class="text-light"><a href="/">Tailorzx</a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html"><img src="/download/img/logo.png" alt="" class="img-fluid"></a>-->
      </div>

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li class="active"><a href="/">Home</a></li>
          <% if(currentUser){ %>
            <% if(currentUser.type === "Consumer"){ %>
            <li><a href="/">Signed in as <%= currentUser.username %></a></li>
            <% } else if(currentUser.type === "Tailor") { %>
            <li><a href="/dashboard">Signed in as <%= currentUser.username %></a></li>
            <% } %>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
            <li class="active"><a href="/login">Login</a></li>
          <% } %>
        </ul>
      </nav><!-- .nav-menu -->

    </div>
  </header><!-- End Header -->

  <main id="main">
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>
          
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <img src="<%= show.pic1 %>" alt="Los Angeles" style="width:100%; height: 400px;">
                </div>
          
                <div class="item">
                  <img src="<%= show.pic2 %>" alt="Chicago" style="width:100%; height: 400px;">
                </div>
              
                <div class="item">
                  <img src="<%= show.pic3 %>" alt="New york" style="width:100%; height: 400px;">
                </div>
              </div>
          
              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
    
          <div class="center container div-port">
            <br><br>
            <h1 class="display-5 font"><< Username >></h1>
            <hr>
            <h1 class="display-1 font"><%= show.user %></h1>
            <hr>
            <h1 class="display-5 font"><< Description >></h1>
            <hr>
            <h1 class="display-5 font1">
                <%= show.desc %>
            </h1>
            <hr>
            <hr>
            <h1 class="display-5 font"><< Location >></h1>
            <hr>
            <h1 class="display-5 font1">
                <%= show.location %>
            </h1>
            <hr>
            <br>
            <a href="/order/<%= show._id %>" class="btn btn-primary">Order</a>
            <a href="/contact/<%= show._id %>" class="btn btn-secondary">Contact</a>
            <br>
            <br>    
          </div>
          <br>
          <br>
          <div class="more container">
              <h1 class="display-3 font1">More Recommended Tailors</h1>
              <br>
              <div class="row">
                  <% for(var i = 0; i < portf.length; i++) { %>
                    <% if(i == 3) { %>
                        <% break; %>
                    <% } %>
                    <% if(portf[i].location == show.location && show.user != portf[i].user){ %>
                        <div class="col-md-4 col-tailor">
                            <br>
                            <img src="<%= portf[i].pic1 %>" alt="" class="img-fluid">
                            <h1 class="display-3 font1"><%= portf[i].user %></h1>
                            <p class="font1" style="font-size: large;"><%= portf[i].desc.substring(0,150) %>...</p>
                            <h3 class="display-6 font1"><%= portf[i].location %></h3>
                            <br>
                            <a href="/tailor/<%= portf[i]._id %>" class="btn btn-danger" style="font-size: large;">Know more</a>
                            <br>
                            <br>
                        </div>               
                    <% } %>
                  <% } %>
              </div>
              <br>
          </div>
  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container">
        <h3>Tailorzx</h3>
        <p>The place to get your cloth designs made easily, quickly and efficiently. With tailors according to your choice, get the design in your budget on your terms.</p>
