  <main id="main">
    <div class="container form-port">
        <h1 class="display-4 font">Describe your order well with <%= result.user %>!</h1>
        <br>
        <h1 class="display-5 font1">Fill the following details.</h1>
        <br>

        <!-- 
        title: req.body.title,
        body: req.body.body,
        range: req.body.range,
        type: req.body.type,
        pattern: req.body.pattern,
        delivery: req.body.delivery,
        color: req.body.color,
        size: req.body.size,
        tailor: result.user,
        username: req.user.username,
        Phone: req.body.phone,
        Address: req.body.address,
        reference: req.body.reference
        -->
        <form method="POST" action="/order/<%= result._id %>">
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
              <label for="exampleFormControlInput1" class="form-label">Title (for reference)</label>
              <input type="text" name="title" class="form-control form-port" id="exampleFormControlInput1" placeholder="" required>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
              <label for="exampleFormControlTextarea1" class="form-label">Description (describe your order)</label>
              <textarea class="form-control form-port" name="body" id="exampleFormControlTextarea1" rows="3" required></textarea>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Delivery time:</label>
            <input type="text" name="delivery" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g 3 days" required>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Range</label>
            <input type="text" name="range" class="form-control form-port" id="exampleFormControlInput1" placeholder="e.g 100-200" required>
          </div>
          <div class="form-group" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Select a textile type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="type">
                <option value="select" disabled>Select a textile type</option>
                <option value="Shirt">Shirt</option>
                <option value="T-Shirt">T-Shirt</option>
                <option value="Pants">Pants</option>
                <option value="Pants">Jeans</option>
            </select>
          </div>
          <div class="form-group" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Select a pattern type</label>
            <select class="form-control" id="exampleFormControlSelect1" name="pattern">
                <option value="select" disabled>Select a pattern type</option>
                <option value="Plain">Plain</option>
                <option value="Checkered">Checkered</option>
                <option value="Chevron">Chevron</option>
                <option value="Floral">Floral</option>
                <option value="Houndstooth">Houndstooth</option>
            </select>
          </div>
          <div class="form-group" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Select a color</label>
            <select class="form-control" id="exampleFormControlSelect1" name="color">
                <option value="select" disabled>Select a color</option>
                <option value="Black">Black</option>
                <option value="White">White</option>
                <option value="Blue">Blue</option>
                <option value="Red">Red</option>
            </select>
          </div>
          <div class="form-group" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Select a size</label>
            <select class="form-control" id="exampleFormControlSelect1" name="size">
                <option value="select" disabled>Select a size</option>
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
              <label for="exampleFormControlInput1" class="form-label">Phone no.</label>
              <input type="text" name="phone" class="form-control form-port" id="exampleFormControlInput1" placeholder="" required>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
              <label for="exampleFormControlTextarea1" class="form-label">Address</label>
              <textarea class="form-control form-port" name="address" id="exampleFormControlTextarea1" rows="3" required></textarea>
          </div>
          <div class="mb-3" data-aos="fade-up" data-aos-delay="100">
            <label for="exampleFormControlInput1" class="form-label">Reference Design: </label>
            <input type="text" name="reference" class="form-control form-port" id="exampleFormControlInput1" placeholder="Put your reference link here of an image!">
          </div>
          <div class="form-group" data-aos="fade-up" data-aos-delay="100">
              <input class="btn-primary" type="submit" value="Submit">  
          </div>
        </form>
    </div>
